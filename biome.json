{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },

  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf",
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingComma": "none",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "bracketSpacing": true,
      "bracketSameLine": false
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noCommentText": "off",
        "noExplicitAny": "off",
        "noEmptyInterface": "off"
      },
      "complexity": {
        "noForEach": "warn",
        "useLiteralKeys": "off",
        "noUselessThisAlias": "warn"
      },
      "style": {
        "noUnusedTemplateLiteral": "off",
        "noUselessElse": "warn",
        "noParameterAssign": "warn",
        "useImportType": "off"
      }
    }
  }
}
